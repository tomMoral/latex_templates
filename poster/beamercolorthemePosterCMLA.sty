\ProvidesPackage{beamercolorthemePosterCMLA}


\mode<presentation>

\definecolor{lightblue}{RGB}{214,215,239}
\definecolor{darkblue}{RGB}{49,66,149}
\definecolor{darkred}{RGB}{154,42,116}
\definecolor{lightgreen}{RGB}{72,173,62}


\setbeamercolor*{normal text}{fg=black,bg=lightblue!70}
\setbeamercolor{block title}{fg=darkred,bg=lightblue!30}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=white}
\setbeamerfont{block title}{size=\large, series=\bfseries}

%It was darkblue
\setbeamercolor{titlelike}{fg=darkred,bg=lightblue!30}
\setbeamercolor{headline}{parent=titlelike}
\setbeamercolor{footline}{parent=titlelike}
\setbeamerfont{footline}{size=\large}

\setbeamercolor{separation line}{bg=darkred}

\setbeamercolor{block alerted title}{parent=normal text,fg=darkred}
\setbeamerfont{alerted text}{series=\scshape,size=\huge}

\setbeamercolor{block example body}{parent=block body, bg=lightgreen!10}
\setbeamercolor{block example title}{parent=block body, bg=lightgreen!30}

\setbeamerfont{title}{size=\LARGE, series=\bfseries}
\setbeamercolor{title}{parent=titlelike}

\setbeamerfont{author}{size=\large}
\setbeamercolor{author}{fg=black}

\setbeamerfont{institute}{size=\large}
\setbeamercolor{institute}{fg=black}

\setbeamertemplate{navigation symbols}{}

\mode
<all>
